{
        cout<<"sum is : "<<(a+b);
}
void sum(int a,double b)
{
        cout<<"sum is : "<<(a+b);
}
void sum(int a,int b)
{
        cout<<"sum is : "<<(a+b);
}
void sum(double a,double b)
{
        cout<<"sum is : "<<(a+b);
}
int main()
{
    double m,n;
    cout<<"Enter two numbers : "<<endl;
